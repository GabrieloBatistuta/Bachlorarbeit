<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <!--- tools:context="com.example.koko.linearalgebraallinone.Matrizen" -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MerstellenA"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MerstellenB"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MerstellenC"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="C"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MphawEingeben"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="Î¦"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAgleichC"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A = C"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBgleichC"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B = C"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MAgleichB"
                    android:layout_width="@dimen/M_EingabeButton_B"
                    android:layout_height="@dimen/M_EingabeButton_H"
                    android:layout_margin="5dp"
                    android:background="@drawable/eingabe_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A = B"
                    android:textSize="@dimen/vektoren_TextSize" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAplusB"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A + B"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MAminusB"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A - B"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBminusA"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B - A"
                    android:textSize="@dimen/vektoren_TextSize" />

                Button
                android:layout_width="@dimen/vektoren_Button_w"
                android:layout_height="@dimen/vektoren_Button_h"
                android:text="B + A"
                android:id="@+id/MBplusA"
                android:background="#f1e884"
                android:layout_margin="2dp"
                android:onClick="matrixenVerwaltung"
                android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAmalB"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A * B"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBmalA"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B * A"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAinverse"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A^(-1)"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBinverse"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B^(-1)"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAtranspnieren"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A^(T)"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBtransponieren"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B^(T)"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAmalPhaw"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A * Î¦"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBmalPhaw"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B * Î¦"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MAsymmtrisch"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="A = A(T) ?"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:id="@+id/MBsymmetrisch"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="B = B(T) ?"
                    android:textAllCaps="false"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/MdeterminanteA"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="det(A)"
                    android:textSize="@dimen/vektoren_TextSize" />

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/MdeterminanteB"
                    android:layout_width="@dimen/M_OperationButton_B"
                    android:layout_height="@dimen/M_OperationButton_H"
                    android:layout_margin="3dp"
                    android:background="@drawable/funktionen_buttons"
                    android:onClick="matrixenVerwaltung"
                    android:text="det(B)"
                    android:textSize="@dimen/vektoren_TextSize" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Minfo"
                    android:layout_width="@dimen/KontrollButton_B"
                    android:layout_height="@dimen/KontrollButton_H"
                    android:background="@drawable/minfo"
                    android:layout_marginRight="50dp"
                    android:onClick="matrixenVerwaltung" />

                <Button
                    android:id="@+id/Mzurueck"
                    android:layout_width="@dimen/KontrollButton_B"
                    android:layout_height="@dimen/KontrollButton_H"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_margin="2dp"
                    android:layout_row="11"
                    android:background="@drawable/zuruck"
                    android:nestedScrollingEnabled="false"
                    android:onClick="matrixenVerwaltung" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
